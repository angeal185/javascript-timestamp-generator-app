body
   background #ddd
   color #111
  
nav
   background #111
   box-shadow 0 0 20px black

input[type="text"]
    width 100%
    padding .375em .75em
    text-align center

.input-field label
     color #000
     
input[type=text]:not(.browser-default):focus:not([readonly])
    border-bottom 1px solid #000!important
    box-shadow 0 1px 0 0 #000!important
	
input[type=text]:not(.browser-default):focus:not([readonly])+label
  color grey
  
.result
    width 100%
    height 50px
    padding-top 1em
    padding-left 0.75em
    border-bottom 1px solid #cdcdcd
    text-align center

.contain
    padding 3em
    width 60%
    margin-top 50px
    margin-left 20%
    
.card
    box-shadow 0 0 20px black
    padding 3em
    width 60%
    
::-webkit-scrollbar
  z-index: 30
  width: 8px
  height: 0
  y-index: hidden

::-webkit-scrollbar-track
  background-color: #111

::-webkit-scrollbar-thumb
  background-color: #2b2e33